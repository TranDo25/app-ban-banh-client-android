<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uicomponent.itemfilterrecview.thanhtoan.ThanhToanActivity">

    <EditText
        android:id="@+id/txtSdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtEmail"
        android:layout_alignBottom="@+id/btnmomo"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="247dp"
        android:ems="10"
        android:inputType="text"
        android:text="0112345553"
        app:layout_constraintBottom_toBottomOf="@+id/txtEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblSdt"
         />

    <Button
        android:id="@+id/btnmomo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="632dp"
        android:layout_marginEnd="84dp"
        android:background="#b0006d"
        android:text="Thanh toán và đặt hàng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="29dp"
        android:text="xác nhận thanh toán"
        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblSoTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lblDiaChiGiaoHang"
        android:layout_alignBottom="@+id/btnmomo"
        android:layout_marginStart="90dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="525dp"
        android:text="tổng cộng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblSdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnmomo"
        android:layout_alignBottom="@+id/btnmomo"
        android:layout_marginStart="-21dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="257dp"
        android:text="số điện thoại"
        app:layout_constraintEnd_toStartOf="@+id/txtSdt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSoTien" />

    <TextView
        android:id="@+id/lblEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/lblDiaChiGiaoHang"
        android:layout_alignStart="@+id/lblDiaChiGiaoHang"
        android:layout_marginStart="72dp"
        android:layout_marginTop="47dp"
        android:text="email"
        app:layout_constraintBottom_toTopOf="@+id/lblDiaChiGiaoHang"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnmomo"
        android:layout_alignBottom="@+id/btnmomo"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="78dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="308dp"
        android:ems="10"
        android:inputType="text"
        android:text="example@gmail.com"
        app:layout_constraintBottom_toTopOf="@+id/lblDiaChi"
        app:layout_constraintEnd_toEndOf="@+id/txtSdt" />

    <EditText
        android:id="@+id/lblDiaChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnmomo"
        android:layout_alignBottom="@+id/btnmomo"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="-44dp"
        android:layout_marginBottom="370dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/lblDiaChiGiaoHang"
        app:layout_constraintStart_toEndOf="@+id/lblDiaChiGiaoHang" />

    <TextView
        android:id="@+id/lblDiaChiGiaoHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnmomo"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="277dp"
        android:text="địa chỉ giao hàng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="101dp"
        android:text="bánh A" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="174dp"
        android:layout_marginTop="99dp"
        android:text="x1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="229dp"
        android:layout_marginTop="99dp"
        android:text="10.000 đ" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="128dp"
        android:text="10.000 đ" />

</RelativeLayout>