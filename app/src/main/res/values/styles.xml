<resources>

    <style name="rounded_8">
        <item name="cornerSize">8%</item>
    </style>

    <style name="rounded_16">
        <item name="cornerSize">16%</item>
    </style>

    <style name="rounded_32">
        <item name="cornerSize">32%</item>
    </style>

    <style name="round_48">
        <item name="cornerSize">48%</item>
    </style>

    <style name="croz_rounded_button">
        <item name="android:background">@drawable/rounded_corner_48x48x48x48_brown</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="croz_dark_pink_text_field">
        <item name="android:minHeight">48dp</item>
        <item name="android:backgroundTint">@color/text_dark_pink</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/text_dark_pink</item>
        <item name="android:textColorHint">@color/text_dark_pink</item>
    </style>

    <style name="croz_clickable_text">
        <item name="android:textColor">@color/text_dark_pink</item>
    </style>

    <style name="croz_price_down_text">
        <item name="android:background">@drawable/rounded_corner_16x16x16x16_dark_pink</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="croz_pink_white_button">
        <item name="android:background">@drawable/rounded_corner_48x48x48x48_white_pink</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_dark_pink</item>
        <item name="android:strokeColor">@color/color_black</item>
        <item name="android:strokeWidth">10</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
